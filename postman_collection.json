{
  "info": {
    "name": "Session Service API",
    "description": "API collection for the Session Service - tracks user sessions with an AI agent",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "manual_id",
      "value": "manual-abc",
      "type": "string"
    },
    {
      "key": "session_id",
      "value": "session-456",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "user-123",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health & Info",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "API Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"],
              "path": [""]
            }
          }
        }
      ]
    },
    {
      "name": "Manuals",
      "item": [
        {
          "name": "Create Manual",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"manual_id\": \"{{manual_id}}\",\n  \"title\": \"Introduction to Python\",\n  \"steps\": [\n    {\n      \"step_number\": 1,\n      \"title\": \"Hello, World!\",\n      \"content\": \"Write a Python script that prints 'Hello, World!' to the console.\"\n    },\n    {\n      \"step_number\": 2,\n      \"title\": \"Variables\",\n      \"content\": \"Declare a variable named 'name' and assign it your name as a string.\"\n    },\n    {\n      \"step_number\": 3,\n      \"title\": \"User Input\",\n      \"content\": \"Use the input() function to ask the user for their age and store it in a variable.\"\n    },\n    {\n      \"step_number\": 4,\n      \"title\": \"Conditionals\",\n      \"content\": \"Write an if-else statement that checks if the age is 18 or older.\"\n    },\n    {\n      \"step_number\": 5,\n      \"title\": \"Loops\",\n      \"content\": \"Create a for loop that prints numbers 1 through 10.\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/manuals",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "manuals"]
            }
          }
        },
        {
          "name": "List Manuals",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/manuals",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "manuals"]
            }
          }
        },
        {
          "name": "Get Manual",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/manuals/{{manual_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "manuals", "{{manual_id}}"]
            }
          }
        },
        {
          "name": "Delete Manual",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/manuals/{{manual_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "manuals", "{{manual_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Sessions",
      "item": [
        {
          "name": "Create Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"session_id\": \"{{session_id}}\",\n  \"user_id\": \"{{user_id}}\",\n  \"manual_id\": \"{{manual_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/sessions",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions"]
            }
          }
        },
        {
          "name": "List Sessions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/sessions",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions"]
            }
          }
        },
        {
          "name": "List Sessions by User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/sessions?user_id={{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions"],
              "query": [
                {
                  "key": "user_id",
                  "value": "{{user_id}}"
                }
              ]
            }
          }
        },
        {
          "name": "Get Session",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/sessions/{{session_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions", "{{session_id}}"]
            }
          }
        },
        {
          "name": "Update Session (Complete)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"completed\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/sessions/{{session_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions", "{{session_id}}"]
            }
          }
        },
        {
          "name": "Delete Session",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/sessions/{{session_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions", "{{session_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Progress",
      "item": [
        {
          "name": "Submit Progress (DONE)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"{{user_id}}\",\n  \"current_step\": 1,\n  \"step_status\": \"DONE\",\n  \"idempotency_key\": \"progress-step1-001\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/sessions/{{session_id}}/progress",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions", "{{session_id}}", "progress"]
            }
          }
        },
        {
          "name": "Submit Progress (ONGOING)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"{{user_id}}\",\n  \"current_step\": 2,\n  \"step_status\": \"ONGOING\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/sessions/{{session_id}}/progress",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions", "{{session_id}}", "progress"]
            }
          }
        },
        {
          "name": "Get Next Step",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/sessions/{{session_id}}/next-step",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions", "{{session_id}}", "next-step"]
            }
          }
        }
      ]
    },
    {
      "name": "Messages",
      "item": [
        {
          "name": "Add Message (User)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"{{user_id}}\",\n  \"message\": \"I have completed the first step. The script prints Hello, World! correctly.\",\n  \"sender\": \"user\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/sessions/{{session_id}}/messages",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions", "{{session_id}}", "messages"]
            }
          }
        },
        {
          "name": "Add Message (Agent)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"{{user_id}}\",\n  \"message\": \"Great job! You've successfully completed the Hello, World! step. Now let's move on to variables.\",\n  \"sender\": \"agent\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/sessions/{{session_id}}/messages",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions", "{{session_id}}", "messages"]
            }
          }
        },
        {
          "name": "Get Messages",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/sessions/{{session_id}}/messages",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions", "{{session_id}}", "messages"]
            }
          }
        }
      ]
    },
    {
      "name": "Edge Cases",
      "item": [
        {
          "name": "Invalid Step (Too High)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"{{user_id}}\",\n  \"current_step\": 100,\n  \"step_status\": \"DONE\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/sessions/{{session_id}}/progress",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions", "{{session_id}}", "progress"]
            },
            "description": "Should return 400 - step exceeds total steps"
          }
        },
        {
          "name": "Duplicate Update (Same Key)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": \"{{user_id}}\",\n  \"current_step\": 1,\n  \"step_status\": \"DONE\",\n  \"idempotency_key\": \"duplicate-test-key\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/sessions/{{session_id}}/progress",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions", "{{session_id}}", "progress"]
            },
            "description": "Send twice - second should return 409 Conflict"
          }
        },
        {
          "name": "Session Not Found",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/sessions/non-existent-session",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions", "non-existent-session"]
            },
            "description": "Should return 404"
          }
        },
        {
          "name": "Manual Not Found",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"session_id\": \"test-session\",\n  \"user_id\": \"{{user_id}}\",\n  \"manual_id\": \"non-existent-manual\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/sessions",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "sessions"]
            },
            "description": "Should return 404 - manual not found"
          }
        }
      ]
    },
    {
      "name": "Mock Webhook",
      "item": [
        {
          "name": "View Received Webhooks",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8001/webhooks",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8001",
              "path": ["webhooks"]
            }
          }
        },
        {
          "name": "Clear Webhooks",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "http://localhost:8001/webhooks",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8001",
              "path": ["webhooks"]
            }
          }
        },
        {
          "name": "Webhook Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8001/health",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8001",
              "path": ["health"]
            }
          }
        }
      ]
    }
  ]
}
